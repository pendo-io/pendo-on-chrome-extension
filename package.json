{
  "name": "pendo-on-chrome-extension",
  "version": "1.0.0",
  "description": "Example of how Pendo is installed in chrome extension.",
  "scripts": {
    "watch:v2": "rm -rf build && webpack --watch --config config/webpack.dev.v2.js",
    "watch:v3": "rm -rf build && webpack --watch --config config/webpack.dev.v3.js",
    "build:v2": "rm -rf build && webpack --config config/webpack.prod.v2.js",
    "build:v3": "rm -rf build && webpack --config config/webpack.prod.v3.js"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "style-loader": "^3.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0",
    "zip-a-folder": "^1.1.3"
  }
}
